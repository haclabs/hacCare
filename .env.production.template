# Production Environment Variables Template
# Copy this to .env.production and update with your values

# Application Environment
NODE_ENV=production
VITE_PRODUCTION_DOMAIN=haccare.app

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Subdomain Configuration
VITE_SUBDOMAIN_ROUTING_ENABLED=true
VITE_DEFAULT_SUBDOMAIN=www

# Optional: Custom Configuration
VITE_APP_NAME="hacCare Healthcare System"
VITE_SUPPORT_EMAIL=support@haccare.app
VITE_API_BASE_URL=https://api.haccare.app

# Security
VITE_ENABLE_HTTPS_REDIRECT=true
VITE_ENABLE_CSP=true

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=your_sentry_dsn
