# Healthcare Application Security Configuration
# 
# CRITICAL: Never commit actual values to version control
# Copy this file to .env and set your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your-project-url.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Security Headers (for production)
VITE_ENABLE_SECURITY_HEADERS=true

# Session Configuration
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_IDLE_TIMEOUT_MINUTES=15

# Logging Configuration
VITE_LOG_LEVEL=warn
VITE_ENABLE_AUDIT_LOGGING=true

# Content Security Policy
VITE_CSP_ENABLED=true

# HIPAA Compliance Settings
VITE_HIPAA_MODE=true
VITE_AUDIT_ALL_ACTIONS=true

# Rate Limiting (requests per minute)
VITE_RATE_LIMIT_RPM=100

# File Upload Restrictions
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=pdf,jpg,png,doc,docx

# Database Security
VITE_ENABLE_ROW_LEVEL_SECURITY=true
VITE_ENABLE_REAL_TIME_AUDIT=true

# Production Security Flags
VITE_DISABLE_DEVTOOLS=true
VITE_ENABLE_INTEGRITY_CHECKS=true

# Encryption Settings (for client-side encryption if needed)
# NEVER commit actual encryption keys
VITE_CLIENT_ENCRYPTION_ENABLED=false
