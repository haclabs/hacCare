{
  "name": "haccare",
  "private": true,
  "version": "5.2.0-rc5",
  "type": "module",
  "description": "Advanced Healthcare Management System with BCMA barcode medication administration, diabetic care, security diagnostics, and comprehensive patient management",
  "keywords": [
    "healthcare",
    "patient-management",
    "bcma",
    "barcode-scanner",
    "medication-administration",
    "diabetic-care",
    "security-diagnostics",
    "medical",
    "react",
    "typescript"
  ],
  "author": "hacCare Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "./node_modules/.bin/vite build",
    "build:fallback": "npx --package=typescript tsc && npx --package=vite vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "type-check": "./node_modules/.bin/tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:tenant-isolation": "vite-node test-tenant-isolation.ts",
    "supabase:types": "supabase gen types typescript --linked > src/types/supabase.ts",
    "clean": "rm -rf dist node_modules/.vite",
    "deps:update": "ncu -u && npm install",
    "deps:check": "ncu",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.1",
    "@supabase/supabase-js": "^2.87.3",
    "@tanstack/react-query": "^5.90.12",
    "@types/jsbarcode": "^3.11.4",
    "@types/jspdf": "^1.3.3",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "html2canvas": "^1.4.1",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "react-image-marker": "^1.2.0",
    "react-router-dom": "^7.10.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.25",
    "globals": "^16.5.0",
    "npm-check-updates": "^19.2.0",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "supabase": "^2.67.1",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
